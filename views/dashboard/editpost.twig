{% extends 'layouts/main.twig' %}

{% block body %}
    <div class="col-sm-10">
        <h1>Edit Post</h1>
        <div>
        </div>
        <div>
            <form action="{{ path_for('dashboard.edit.update',{id:data.id}) }}" method="post" enctype="multipart/form-data">
                <fieldset>
                    <div class="form-group">
                        <label class="FieldInfo" for="title">Title:</label>
                        <input class="form-control" type="text" name="Title" id="title" placeholder="Title" value="{{ data.title }}">
                    </div>
                    <div class="form-group">
                        <label class="FieldInfo" for="category">Current Category: </label>
                        {{ data.category }}<br>
                        <label class="FieldInfo" for="category">Category:</label>
                        <select class="form-control" name="Category" id="category">
                            {% for c in categories %}
                            <option>{{ c.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="FieldInfo" for="imageselect">Current Image:</label>
                        <img src="{{ base_url() }}/public/assets/uploads/{{ data.image }}" height="60" width="80"><br>
                        <small>If a new image is chosen, the current one will be deleted.</small>
                        <br>
                        <label class="FieldInfo" for="imageselect">Select Image:</label>
                        <input class="form-control" type="file" name="Image" id="imageselect">
                    </div>
                    <div class="form-group">
                        <label class="FieldInfo" for="postarea">Post:</label>
                        <textarea class="form-control" name="Post" id="postarea">{{ data.post }}</textarea>
                    </div>
                    <input class="btn btn-info btn-block" type="Submit" name="Submit" value="Edit Post">
                    <input class="btn btn-danger btn-block" type="Submit" name="Cancel" value="Cancel">
                </fieldset>
            </form>
        </div>
        <div>
        </div>
    </div> <!-- col-sm-10 End -->
{% endblock %}